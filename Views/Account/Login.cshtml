@model Social_Media.Models.AuthenticationViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/LoginRegForm.css">
</head>
<body>

    <div class="wrapper">
        <div class="form-box login">
            <h2>Login</h2>
            <form asp-action="Login" method="post">
                <div class="input-box">
                    <span class="icon" asp-validation-for="Username"></span>
                    <input asp-for="Username" type="text" required>
                    <label>Username</label>
                </div>
                <div class="input-box">
                    <span class="icon" asp-validation-for="Password"></span>
                    <input asp-for="Password" type="password" required>
                    <label>Password</label>
                </div>
                <div class="remember-forgot">
                    <label><input type="checkbox">Remember me</label>
                    <a href="#">Forgot Password ?</a>
                </div>
                <button type="submit" class="btn">Login</button>
                <div class="login-register">
                    <p>Don't have an account ?<a href="#" class="register-link"> Register</a></p>
                </div>
            </form>
        </div>

        <div class="form-box register">
            <h2>Register</h2>
            <form asp-action="Register" method="post">
                <div class="input-box">
                    <span class="icon" asp-validation-for="Username"></span>
                    <input asp-for="Username" type="text" required>
                    <label>Username</label>
                </div>
                <div class="input-box">
                    <span class="icon" asp-validation-for="Email"></span>
                    <input asp-for="Email" type="email" required>
                    <label>Email</label>
                </div>
                <div class="input-box">
                    <span class="icon" asp-validation-for="Password"></span>
                    <input asp-for="Password" type="password" required>
                    <label>Password</label>
                </div>
                <div class="remember-forgot">
                    <label><input type="checkbox">I agree to the terms</label>
                </div>
                <button type="submit" class="btn">Register</button>
                <div class="login-register">
                    <p>Alrady have an account ?<a href="#" class="login-link"> Login</a></p>
                </div>
            </form>
        </div>
    </div>

    <video autoplay loop muted plays-inline class="background-video">
        <source src="~/videos/you%20have%20the%20power%20to%20protect%20your%20peace%20(1).mp4" type="video/mp4" />
    </video>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="~/js/LoginRegForm.js"></script>
</body>
</html>


