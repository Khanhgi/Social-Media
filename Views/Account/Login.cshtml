@model Social_Media.Models.AuthenticationViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8" />
    <title>Authentication</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Gn5384xqQ1aoWvqQipaBt2ibZKsAdl8EwStQa8hFw00kI2RavJSd6SZAt+WN7bcJefYvf4GxL9aPZmXdNl1o9Q==" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/LoginRegForm.css">
</head>
<body>
    <div class="wrapper">
        <div class="form-box login">
            <h2>Login</h2>
            <form asp-action="Login" method="post" >

               <div class="input-box">
                        <span class="icon" asp-validation-for="Username"></span>
                        <input asp-for="Username" type="text" required>
                        <label>Username</label>
               </div>

                    <div class="input-box">
                        <span class="icon" asp-validation-for="Password"></span>
                        <input asp-for="Password" type="password" required>
                        <label>Password</label>
                        <span class="text-danger" style="color: red;display: flex; justify-content: center; padding-top: 0.5em;">@ViewData["ErrorMessage"]</span>
                    </div>

                    <div class="remember-forgot">
                        <label><input type="checkbox">Remember me</label>
                        <a href="#">Forgot Password ?</a>
                    </div>

                    <button type="submit"  class="btn">Login</button>

                    <div class="login-register">
                        <p>Don't have an account ?<a href="#" class="register-link"> Register</a></p>
                    </div>
                </form>
        </div>

        <div class="form-box register">
            <h2>Register</h2>

            <form asp-action="Register" method="post">

                <div class="input-box">
                    <span class="icon" asp-validation-for="Username"></span>
                    <input asp-for="Username" type="text" required>
                    <label>Username</label>
                </div>

                <div class="input-box">
                    <span class="icon" asp-validation-for="Email"></span>
                    <input asp-for="Email" type="email" required>
                    <label>Email</label>
                </div>

                <div class="input-box">
                    <span class="icon" asp-validation-for="Password"></span>
                    <input asp-for="Password" type="password" required>
                    <label>Password</label>
                </div>

                <button type="submit" class="btn">Register</button>
                <div class="login-register">
                    <p>Alrady have an account ?<a href="#" class="login-link"> Login</a></p>
                </div>
            </form>
        </div>
    </div>


    <button id="open-popup" class="btn-open-popup">open</button>

    <div class="popup">
        <img src="~/images/r.png" />
        <p>@ViewData["ErrorConnectServer"]</p>
        <button class="button-82-pushable" role="button">
            <span class="button-82-shadow"></span>
            <span class="button-82-edge"></span>
            <span class="button-82-front text">
                OK
            </span>
        </button>
    </div>

    <video autoplay loop muted plays-inline class="background-video">
        <source src="~/videos/you%20have%20the%20power%20to%20protect%20your%20peace%20(1).mp4" type="video/mp4" />
    </video>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="~/js/LoginRegForm.js"></script>
    <script src="~/js/Pop-up.js"></script>
</body>
</html>